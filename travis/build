#!/bin/bash
echo "hellow"
if [[ "$TRAVIS_OS_NAME" = "windows" ]] ; then
	echo export PATH="c:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\BuildTools\\MSBuild\\15.0\Bin\\":$PATH
	export PATH="c:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\BuildTools\\MSBuild\\15.0\Bin\\":$PATH
	pushd demo/noui
	dir
	MSBuild.exe /property:Configuration="Release";Platform="x64"
	popd
else
	set -ev
	pushd demo/noui && make clean && make && popd
	pushd demo/noui_c && make clean && make && popd
	pushd demo/noframes && make clean && make && popd
fi
